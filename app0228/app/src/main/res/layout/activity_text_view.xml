<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TextViewActivity"
    android:background = "#5FBDDA"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize ="30sp"
        android:layout_centerHorizontal="true"
        android:text="This is a Help !!!"
        />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="50dp"
        android:textSize="24sp"
        android:singleLine="false"
        android:ellipsize="marquee"
        android:text="Enter App, You will find three Buttons "
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"

        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        android:textSize="24sp"
        android:singleLine="false"
        android:ellipsize="marquee"
        android:text=" 1. Help ：this page "
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:color="#E9F37B"
        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="150dp"
        android:textSize="24sp"
        android:singleLine="false"
        android:ellipsize="marquee"

        android:text=" 2：START :Enter the main function page   When you enter the function page ，you can use camera，and then a photo
 will be displayed , you can touch the monitor ,  if count of touch is 5 , a user list will be displayed ."

        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"

        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="380dp"
        android:textSize="24sp"
        android:singleLine="false"
        android:ellipsize="marquee"

        android:text=" 3. EXIT : Exit this App ,"

        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"
        android:focusableInTouchMode="true"

        />
        <Button
            android:id="@+id/btn_return"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="return"/>
</RelativeLayout>